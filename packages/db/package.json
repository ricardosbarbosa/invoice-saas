{
  "name": "@workspace/db",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "build": "pnpm run prisma:generate && tsc -p tsconfig.json",
    "dev": "tsc -w --preserveWatchOutput -p tsconfig.json",
    "lint": "eslint .",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:format": "prisma format --schema prisma/schema.prisma",
    "prisma:push": "prisma db push --schema prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema prisma/schema.prisma"
  },
  "files": [
    "dist",
    "prisma"
  ],
  "dependencies": {
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@types/node": "^20.19.25",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.39.1",
    "prisma": "7.2.0",
    "typescript": "^5.9.3"
  }
}
